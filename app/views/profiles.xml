<Alloy>
    <View id="profiles">
        <View class="header" platform="ios">
            <Require src="components/menuButton" id="menuButton" />
            <Require src="components/closeButton" id="closeButton" onClick="closeWindow" />
            <Label id="headerTitle" class="headerTitle" />
            <View class="rightNavButton" onClick="doClickNewProfile">
                <Label id="newProfile" />
            </View>
        </View>

        <Button id="newProfile" platform="android" onClick="doClickNewProfile"
            class="actionBubble" />

        <View class="content">
            <View id="emptyView">
                <ImageView class="emptyProfileIcon" />
                <Label class="emptyProfileLabel" />
            </View>

            <TableView id="profilesTableView" onClick="doClickProfilesTableView" />
        </View>
    </View>
</Alloy>
