<Alloy>
    <Window id="comment">
        <View class="header" platform="ios">
            <Require src="components/backButton" id="backButton" onClick="onClickBackButton" />
            <Label id="headerTitle" class="headerTitle" />
            <Label id="headerSubTitle" class="headerSubTitle" id="headerSubTitle" />
            <Require src="components/guideButton" id="guideButton" topic="cloudCover" />
        </View>

        <Menu platform="android">
            <Require src="components/guideButton" id="guideButton" topic="cloudCover" />
        </Menu>

        <ScrollView class="content">
            <View class="commentContainer">
                <TextArea id="commentTextArea" />
                <Require src="components/button" id="postComment" onClick="doClickPostComment" />
            </View>
        </ScrollView>
    </Window>
</Alloy>
