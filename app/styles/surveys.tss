// header

".header": {
    height: 150,
    backgroundColor: '#01CBE1',
    top: 0
}

".headerWelcomeTitle": {
    text: L('surveys.welcomeTitle'),
    top: 30,
    font: {
        fontFamily: 'ProximaNova-Regular',
        fontWeight: 'bold',
    },
    color: Alloy.CFG.design.header.fontColor,
    textAlign: 'center'
}

// Header - Upload button

"#uploadButtonContainer": {
    top: 20,
    right: 0,
    width: 60,
    height: 40,
    opacity: 0.3
}

".uploadButton": {
    height: 17,
    width: 17,
    image: '/images/navigation/upload.png',
    right: 20
}

"#notificationContainer": {
    width: 17,
    height: 17,
    top: 2,
    right: 10,
    zIndex: 10,
    visible: false
}

"#notificationCount": {
    text: "1",
    zIndex: 20,
    width: 16,
    left: 1,
    height: 17,
    color: '#fff',
    font: {
        fontSize: 11,
        fontWeight: 'bold'
    },
    textAlign: 'center',

}

".notificationBackground": {

    width: 17,
    height: 17,
    image: '/images/notifications/notification.png'
}


// Buttons

"#startSurvey": {
    top: 75,
    text: L('surveys.startSurvey'),
    textAlign: 'center',
    borderRadius: 0,
    borderWidth: 3,
    borderColor: '#fff',
    backgroundColor: "#fff",
    color: "#01CBE1",
    font: {
        fontSize: 16,
        fontFamily: 'ProximaNova-Semibold',
    }
}

".content": {
    top: 150,
    backgroundColor: '#F0F0F0'
}

"#emptyView": {
    height: Ti.UI.SIZE,
    top: 25,
    bottom: 25,
    layout: 'vertical'
}

".or": {
    top: 0,
    text: L('surveys.or'),
    textAlign: 'center',
    font: {
        fontSize: 12,
        fontWeight: "normal"
    },
    color: "#B9B9B9",
    left: 25,
    right: 25,
}

"#viewGuide": {
    top: 15,
    borderColor: "#B9B9B9",
    color: "#B9B9B9",
    text: L('surveys.viewGuide'),
    textAlign: 'center'
}


// Profile

"#surveyTableView": {
    visible: false,
    backgroundColor: 'transparent'
}

"#surveyTableView[platform=ios]": {
    separatorStyle: Titanium.UI.iPhone.TableViewSeparatorStyle.NONE,
}



